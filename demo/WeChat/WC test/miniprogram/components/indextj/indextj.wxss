@import "../../app.wxss";
.tj-til{
  width: 100%;
  height: 40px;
  color:orangered;
  font-size:18px;
  font-weight: bold;
  position: fixed;
  background-color: white;
  z-index: 100;
}
.tj-tilview{
  position: absolute;
  display: inline-block;
  width: 80px;
  text-align: center;
  height: 100%;
  left: 0;
  top:0;
  line-height: 40px;
}
.tj-tiltext{
  
}
.search{
  position: absolute;
  left: 5px;
  color: #898989;
  top:3px;
  font-size: 20px;
}
.tj-select{
  display: inline-block;
  width: calc(100% - 100px);
  height: 30px;
  margin-top: 5px;
  margin-left: 90px;
  border-radius: 30px;
  background-color: #dedede;
  position: relative;
}
.tj-input{
  display: inline-block;
  width: calc(100% - 60px);
  min-height: 0;
  height: 20px;
  position: absolute;
  top:5px;
  left:30px;
  color:#333333;
  font-size: 16px;
  font-weight: normal;
  line-height: 20px;
}
.tj-hr{
  height: 1px;
  background-color: #666666;
}
.tj-goods{
  margin-top:10px;
  width: 100%;
}
.tj-good{
  margin-top: 10px;
  padding-left: 10px;
  width: 100%;
  height: 140px;
  display: inline-block;
  position: relative;
  border-bottom: 1px solid #666666;
}
.tjgood-image{
  width: 200px;
  height:120px;
  background-color: royalblue;
  display: inline-block;
}
.tj-goodname{
  display: inline-block;
  color: black;
  font-size: 18px;
  position: absolute;
  top:0px;
  margin-left: 210px;
}
.tj-goodms{
  display: inline-block;
  color:#666666;
  font-size:12px;
  position: absolute;
  top:28px;
  margin-left: 210px;
  height: 30px;
  overflow: hidden;
}
.tj-goodrprice{
  color: black;
  text-decoration: line-through;
  position: absolute;
  top:60px;
  margin-left: 210px;
  font-size: 14px;
}
.tj-goodprice{
  color: orangered;
  font-size:18px;
  position: absolute;
  top:75px;
  margin-left: 210px;
}
.tj-goodshopcart{
  display: inline-block;
  position: absolute;
  top:98px;
  margin-left: 210px;
  font-size: 15px;
  width: 100px;
  border: 1px solid #888888;
  text-align: center;
}
.anim{
  display: inline-block;
  width: 10px;
  border-radius:50%;
  height: 10px;
  background-color:#1492f8;
  position: absolute;
  left:15px;
  top:5px;
  animation: cirle 0.6s linear infinite;
}
@keyframes cirle{
  0%{
    left:0px;
    top:5px;
  }
  20%{
    left:35px;
    top:-100px
  }
  50%{
    left:30px;
    top:270px;
  }
  100%{
    left:30px;
    top:700px;
  }
}
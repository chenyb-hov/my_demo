.good-img{
  height: 300px;
}
.good-img image{
  width: 100%;
  height: 100%;
}
.good-name{
  width: calc(100% - 20px);
  margin-right: 10px;
  margin-left: 10px;
  font-size: 24px;
  font-weight: 800;
}
.good-prices{
  width: calc(100% - 20px);
  margin-right: 10px;
  margin-left: 10px;
}
.good-price{
  font-size: 22px;
  color: orangered;
  display: inline-block;
  margin-right: 10px;
}
.good-rprice{
  color: #666666;
  text-decoration: line-through;
  display: inline-block;
}
.good-ms{
  background-color: #999999;
}
.good-msnr{
  width: calc(100% - 20px);
  margin-right: 10px;
  margin-left: 10px;
}
.good-bot{
  border-top: 1px #888888 solid;
  width: 100%;
  position: fixed;
  height: 60px;
  bottom: 0;
  background-color: white;
  text-align: center;
}
.good-collection{
  display: inline-block;
  width: calc(20% - 1px);
  height: 100%;
  line-height: 60px;
  background-color: white;
  color: red;
  font-size: 20px;
  font-weight: 800;
  border-right: 1px #888888 solid;
}
.good-addcart{
  border-right: 1px #888888 solid;
  display: inline-block;
  width: calc(40% - 1px);
  height: 100%;
  line-height: 60px;
  font-size: 20px;
}
.good-may{
  display: inline-block;
  width: 40%;
  height: 100%;
  line-height: 60px;
  background-color: #15f80e;
  color: white;
  font-size: 20px;
  font-weight: 800;
}
.good-comments{
  width: 100%;
}
.good-comment{
  display: inline-block;
  position: relative;
  width: calc(100% - 20px);
  padding: 10px;
  border-top: 1px #898989 solid;
  height: 130px;
}
.good-comment-uname{
  position: absolute;
  left:90px;
  top:20px;
  font-size: 18px;
  display: inline-block;
}
.good-comment-uimg{
  position: absolute;
  display: inline-block;
  left:10px;
  top:10px;
}
.good-comment-uimg image{
  width: 70px;
  height: 70px;
}
.good-comment-content{
  position: absolute;
  width: calc(100% - 22px);
  border: 1px #9a9a9a solid;
  top:90px;
  left:10px;
  height: 50px;
  text-overflow: ellipsis;
  word-break: break-all;
}
